<!DOCTYPE html>
<html>
  <head>
    <title>CRUD</title>
    <script src="http://code.jquery.com/jquery-1.12.0.min.js"></script>
    <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js"></script>
    <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
    <script src="/../javascripts/main.js"></script>
    <style type="text/css">
    .inp{
        width: 200px;
      }
    .bg{
        background-color: #F5F5F5; 
        padding: 20px;
        margin: 10px;
      }
    .r{
      width: 70%;
      padding: 10px;
      margin-top: 5px;
    }
    </style>

  </head>
  <body>
    <h2>CRUD Operations</h2>
    <button type="button" class="btn btn-default btn-lg" data-toggle="modal" data-target="#myModal" style="margin-left: 2px;">Create new</button>
  <!-- Modal -->
  <div class="modal fade" id="myModal" role="dialog">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
        </div>
        <form action="/" method="POST">
        <div class="modal-body bg">
          <label>ID</label><br>
          <input class="form-control inp" type="text" name="newUser[id]"><br>
          <label>Name</label><br>
          <input class="form-control inp" type="text" name="newUser[nm]"><br>
          <label>Surname</label><br>
          <input class="form-control inp" type="text" name="newUser[sn]"><br>
          <label>Age</label><br>
          <input class="form-control inp" type="text" name="newUser[ag]"><br>        
        </div>
        <div class="modal-footer">
          <button type="submit" class="btn btn-default">Ok</button>
        </div>
        </form>
      </div>
    </div>
  </div>
    <table class="table r">
      <tr>
        <th>USER NAME</th>
        <th>SURNAME</th>
        <th>AGE</th>
        <th>ACTION</th>
      </tr>
      <% users.forEach(function(item){ %>
      <tr>
        <td><%= item.firstName %></td>
        <td><%= item.surname %></td> 
        <td><%= item.age %></td>
        <td style="width: 150px;">
          <button class="btn btn-primary" id="<%= item.id %>"onclick="edit(this.id)">Edit</button>
          <button class="btn btn-primary"  id="<%= item.id %>" onclick="del(this.id)">Delete</button>
        </td>
      </tr>
      <% }); %>
    </table>
  </body>
</html>